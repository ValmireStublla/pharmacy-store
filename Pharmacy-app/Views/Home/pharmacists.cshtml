@{
    ViewData["Title"] = "Meet The Staff";
}
<div class="phamtext">
    <h1>@ViewData["Title"]</h1>
    <h5>
        We take great pride in introducing you
        to the professionals behind the counter who play a crucial role
        in ensuring your health and well-being.
    </h5>
</div>

<div class="row">
    @foreach (var pharmacist in Model)
    {
        <div class="col-md-3 mb-4">
            <a href="@Url.Action("DetailsPharmacist", "Home", new {id = pharmacist.Id})" class="card-link" style="text-decoration:none;">
                <div class="card h-100">
                    <img src="data:image;base64,@Convert.ToBase64String(pharmacist.ProfilePicture)" class="card-img-top" alt="Pharmacist Profile Picture">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@pharmacist.Name</h5>
                        <p class="card-text">Degree: @pharmacist.Degree</p>
                    </div>
                </div>
            </a>
        </div>
    }
</div>