@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<br />
<br />
<div class="row">
    <div class="col-md-6 col-md-offset-2">
        <img src="/images/icon-log-in.svg" alt="idk"/>
    </div>

    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2>@ViewData["Title"]</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <br>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <br>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <br> 
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                </div>
                <br>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" style="text-decoration:none">Forgot your password? </a>
                    </p>
                  
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" style="text-decoration:none">Resend email confirmation</a>
                    </p>

                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="text-decoration:none">Do not have an account already ? Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

<br />
<br />
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
